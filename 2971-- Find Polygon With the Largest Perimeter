class Solution:
    def largestPerimeter(self, nums: List[int]) -> int:
        while True:
            if(len(nums)>2):
                maxx=max(nums)
                if(sum(nums)-maxx > maxx):
                    if(i>0 for i in nums):
                        return (sum(nums))
                    else:
                        return -1
                else:
                    nums.remove(maxx)

            else:
                  return (-1)


        
